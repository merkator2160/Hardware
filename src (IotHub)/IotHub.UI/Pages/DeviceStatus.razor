<PageTitle>Device status</PageTitle>

<h1>Device status:</h1>

@if (_unavailableDevices == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Topic</th>
            <th>Last available</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var x in _unavailableDevices)
        {
            <tr>
                <td>@x.Name</td>
                <td>@x.AvailabilityTopic</td>
                <td>@x.LastAvailable.ToString("s")</td>
            </tr>
        }
        </tbody>
    </table>
}